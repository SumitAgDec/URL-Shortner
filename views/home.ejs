<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
</head>
<body>
    <h1>URL Shortner</h1>
    <form method="post" action="/url">
        <label>Enter your url</label>
        <input type="text" name="url" placeholder="Enter url">
        <button type="submit">Generate Short URL</button>
    </form>
    <% if (locals.id) { %>
     <p>URL Generated: http://localhost:8001/url/<%= id %> </p>
    <% } %> 
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S.No</th>
                    <th>ShortID</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                        <% locals.urls.forEach((urls, index) => { %>
                            <tr>

                                <td><%= index + 1 %></td>
                                <td><%= urls.shortId %></td>
                                <td><a href="<%= urls.redirectURL %>">Link</a></td>
                                <td><%= urls.visitHistory.length %></td>
                            </tr>
                        <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>